{
  "title": "ZSH Config",
  "prereqs": ["zsh", "git"],
  "repos": {
    "oh-my-zsh": {
      "url": "https://github.com/sgpthomas/oh-my-zsh",
      "dest": "~/.oh-my-zsh"
    },
    "zsh-syntax-highlighting": {
      "url": "https://github.com/zsh-users/zsh-syntax-highlighting.git",
      "dest": "~/.oh-my-zsh/custom/plugins/zsh-syntax-highlighting"
    }
  },
  "touch": [
    "~/.zshenv",
    "~/.zshprojects",
    "~/.zshalias",
    "~/.zshlocal"
  ],
  "links": {
    "zshrc": "~/.zshrc"
  },
  "finalize": ["zsh ~/.zshrc"]
}
